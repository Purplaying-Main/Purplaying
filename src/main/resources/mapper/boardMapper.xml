<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd ">

<mapper namespace="kr.co.purplaying.dao.BoardMapper">

	<sql id="selectFromBoard">
		SELECT bno, title, "content", writer, view_cnt, comment_cnt, reg_date FROM T_BOARD
	</sql>
	
	<select id="select" parameterType="int" resultType="BoardDto">
		<include refid="selectFromBoard"/>
		WHERE bno = #{bno}
	</select>
	
	<delete id="deleteAll">
		truncate table T_BOARD restart identity
	</delete>
	
	<insert id="insert" parameterType="BoardDto">
		INSERT INTO T_BOARD (title,content,writer) VALUES (#{title},#{content}, #{writer})
	</insert>
	
	<select id="count" resultType="int">
		SELECT COUNT(*) from T_BOARD  
	</select>
	
	<select id="selectPage" parameterType="map" resultType="BoardDto">
		<include refid="selectFromBoard"/>
			order by REG_DATE  desc , bno desc
			limit #{pageSize} OFFSET  #{offset}
	</select>
	
	<update id="increaseViewCnt" parameterType="int">
		UPDATE T_BOARD set VIEW_CNT = VIEW_CNT + 1 where bno = #{bno}
	</update>
	
</mapper>