<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd ">

<mapper namespace="kr.co.purplaying.dao.searchResultMapper">
	
	
	
	<sql id="selectFromBoard">
		SELECT prdt_id, prdt_gerne, prdt_name, prdt_opendate, prdt_enddate, prdt_goal, prdt_currenttotal
		FROM tb_product
	</sql>
	
	<select id="select" parameterType="int" resultType="SearchResultDto">
		<include refid="selectFromBoard"/>
		WHERE prdt_name = #{prdt_name}
	</select>
	
	<select id="selectPage" parameterType="map" resultType="BoardDto">
		<include refid="selectFromBoard"/>
		ORDER BY prdt_opendate DESC, prdt_gerne DESC
		LIMIT #{offset}, #{pageSize}
</select>
	

</mapper>